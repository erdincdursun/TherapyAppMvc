@model LoginViewModel

<section class="text-center text-lg-start">

   
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5">
                        <h2 class="fw-bold mb-2"><i class="fa-regular fa-user" style="color: #67a013;"></i> Login</h2>
                        <hr />
                        <form asp-area=""
                              asp-controller="Account"
                              asp-action="Login" 
                              method="post">

                            <div class="row" style="width:75%;">

                                <div class="col-md-12 mb-4 form-outline">
                                    <label class="form-label" asp-for="UserName"></label>
                                    <input type="text" asp-for="UserName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                    
                                </div>
                                <div class="col-md-12 mb-4 form-outline">
                                    <label class="form-label" asp-for="Password"></label>
                                    <input type="password" asp-for="Password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                          
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input class="form-check-input me-2"  asp-for="IsPersistent" />
                                    <label class="form-check-label" asp-for="IsPersistent"></label>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <a class="btn text-success fw-bold"
                                       asp-area=""
                                       asp-controller="Account"
                                       asp-action="ForgotPassword">Forgot my password?</a>

                                </div>
                                <button type="submit" class="btn btn-success btn-block mb-4">
                                    <i class="fa-solid fa-arrow-right-to-bracket"></i>  Login
                                </button>
                           
                            </div>

                        </form>
                        <div class="row" style="width:75%;">
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-warning btn-block mb-4">
                            <i class="fa-solid fa-id-card"></i> Register
                        </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/img/login_1.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>

</section>
