@model AdvisorAddViewModel

<h3 class=" mt-3 text-center ">New Advisor Form</h3>
<hr />
<form asp-action="NewAdvisor" method="post">
    <div class="row g-4 align-items-center mt-3">
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="First Name">
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
        </div>
        <div class="col-md-6">
            <label asp-for="Education" class="form-label">Education</label>
            <input asp-for="Education" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Last Name">
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Last Name">
        </div>
        <div class="col-md-6">
            <div class="form-floating mt-3">
                <select class="form-select" asp-for="BranchId" asp-items="@Model.BranchList"></select>
                <label asp-for="BranchList"></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mt-3">
                <select class="form-select" asp-for="CategoryId" asp-items="@Model.CategoryList"></select>
                <label asp-for="CategoryList"></label>
            </div>
        </div>
        <div class="col-md-6">
            <label asp-for="About" class="form-label">About</label>
            <textarea asp-for="About" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit</button>


</form>


