@model List<Advisor>

@await Html.PartialAsync("_Header")

<div class="row ">

    <div class="col-md-2">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("BranchesMenu")
    </div>


<div class="col-md-10">
        <div class="row g-3">
    @foreach (var advisor in Model)
    {
        <div class="col-lg-3 mb-4">
            <div class="card h-90 shadow border-0 ">
                <img class="card-img-top" src="/img/@advisor.PhotoUrl" alt="..." />
                <div class="card-body p-3">
                    <div class="badge bg-primary bg-gradient rounded-pill mb-2">News</div>
                    <a class="text-decoration-none link-dark stretched-link"
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Review"
                       asp-route-id="@advisor.Id">
                        <h4 class="card-title mb-1">@advisor.Branch.Name</h4>
                        <h5 class="card-title mb-2"><span class="text-success">@advisor.FirstName @advisor.LastName</span></h5>

                    </a>
                    <p class="card-text mb-0">
                        @advisor.About
                    </p>
                </div>
                <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                    <div class="d-flex align-items-end justify-content-between">
                        <div class="d-flex align-items-center">
                            <img class="rounded-circle me-3"
                             src="/img/@advisor.PhotoUrl" width="40" height="40" alt="..." />
                            <div class="small">
                                  <div>@advisor.FirstName @advisor.LastName</div>
                                <div class="fw-bold">@advisor.Price <span class="text-success">Dollars</span></div>
                                <div class="text-muted">@advisor.CreatedDate</div>
                                <a class="btn btn-success mt-3">Go Detail</a>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
       
    }
        </div>
</div>

</div>

